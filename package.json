{
    "name": "banking-application",
    "version": "1.0.0",
    "description": "Core Banking Application (JAM Stack)",
    "scripts": {
        "client": "cd frontend && npm run start",
        "server": "cd backend && mvn spring-boot:run",
        "install": "bash setup.sh",
        "start": "concurrently \"npm run client\" \"npm run server\"",
        "test": "echo \"Error: no test specified\" && exit 1",
        "test:task1": "cd frontend && npm run test:task1",
        "test:task2": "cd frontend && npm run test:task2",
        "test:task3": "cd frontend && npm run test:task3",
        "test:task4": "cd frontend && npm run test:task4",
        "test:task5": "cd backend && mvn test -Dtest=com.hackerrank.corebanking.controller.task5.TransactionControllerIT",
        "test:task6": "cd backend && mvn test -Dtest=com.hackerrank.corebanking.service.task6.CardServiceIT",
        "test:task7": "cd backend && mvn test -Dtest=com.hackerrank.corebanking.service.task7.TransactionServiceIT",
        "test:task8": "cd backend && mvn test -Dtest=com.hackerrank.corebanking.service.task8.TransactionServiceIT"
    },
    "keywords": [
        "core-banking",
        "backend",
        "testing"
    ],
    "author": "HackerRank",
    "license": "ISC",
    "dependencies": {
        "concurrently": "^8.2.2"
    }
}
